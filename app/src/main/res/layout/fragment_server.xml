<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/half_unit_dimen"
    tools:fragment="com.emoge.app.emoge.ui.server.CategoryFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/server_gif_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/server_gif_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/server_no_image"
        android:layout_width="@dimen/no_image_size"
        android:layout_height="@dimen/no_image_size"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/server_progress"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
