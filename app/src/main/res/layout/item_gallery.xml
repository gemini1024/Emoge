<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.emoge.app.emoge.ui.view.SquareImageView
        android:id="@+id/gallery_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/gallery_item_loading"
        style="@style/AVLoadingIndicatorView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@android:color/black"
        app:indicatorName="BallPulseIndicator" />

    <TextView
        android:id="@+id/gallery_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorFrameCover"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:paddingBottom="@dimen/text_padding_height"
        android:paddingEnd="@dimen/text_padding_width"
        android:paddingStart="@dimen/text_padding_width"
        android:paddingTop="@dimen/text_padding_height"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="@dimen/text_caption_size"
        android:visibility="gone" />

</RelativeLayout>