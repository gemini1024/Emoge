<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/server_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_dimen"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation">

        <com.daimajia.androidviewhover.BlurLayout
            android:id="@+id/server_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/server_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/server_image"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/server_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/server_item_favorite_icon"
                android:layout_below="@id/server_item_image"
                android:layout_marginBottom="@dimen/half_unit_dimen"
                android:layout_marginEnd="@dimen/half_unit_dimen"
                android:layout_marginStart="@dimen/unit_dimen"
                android:layout_toStartOf="@id/server_item_favorite_icon"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/primary_text_light" />

            <com.emoge.app.emoge.ui.view.SquareImageView
                android:id="@+id/server_item_favorite_icon"
                android:layout_width="@dimen/unit_dimen"
                android:layout_height="@dimen/unit_dimen"
                android:layout_alignBottom="@+id/server_item_favorite"
                android:layout_alignTop="@+id/server_item_favorite"
                android:layout_toStartOf="@+id/server_item_favorite"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_favorite_on" />

            <TextView
                android:id="@+id/server_item_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/server_item_image"
                android:layout_marginBottom="@dimen/half_unit_dimen"
                android:layout_marginEnd="@dimen/unit_dimen"
                android:layout_marginStart="@dimen/half_unit_dimen"
                android:layout_marginTop="@dimen/half_unit_dimen"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/primary_text_light" />
        </com.daimajia.androidviewhover.BlurLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>